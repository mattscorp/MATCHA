            <input required type="number" min = "18" max="120" name="age">
            <legend>Ta bio</legend>
            <input required type="text" name="bio">
            <legend>Ton genre</legend>
            <input required type="radio" name="gender" value="Femme"> Femme<br/>
            <input required type="radio" name="gender" value="Homme"> Homme<br/>
            <input required type="radio" name="gender" value="Autre"> Autre<br/>
            <legend>Tes orientation</legend>
            <input required type="radio" name="orientation" value="Femme"> Femmes<br/>
            <input required type="radio" name="orientation" value="Homme"> Hommes<br/>
            <input required type="radio" name="orientation" value="Bi"> Bi<br/>
            <input required type="radio" name="orientation" value="Autre"> Autres<br/>
            <legend>Ton département</legend>
            <select required name="departement" size="1">
                <option></option>
                <% var i = 1; var j = 1;
                    while (i <= 95)
                    { 
                        if (i == 75)
                        { 
                            while (j <= 20) 
                            { %>
                             <option><%= i  %> (<%= j %>)</option>
                            <% j++;
                            }
                        }
                        else 
                        { %>
                            <option><%= i %></option>
                    <%  } i++;
                    } %>
                <option>971</option>
                <option>972</option>
                <option>973</option>
                <option>974</option>
                <option>976</option>
            </select>
            <legend>J'accepte que Matcha puisse me géolocaliser</legend>
            <input required type="radio" name="geo_consent" value="Oui"> Oui<br/>
            <input required type="radio" name="geo_consent" value="Non"> Non<br/>
            <input required type="submit" name="Valider">
        </form>
    </body>
